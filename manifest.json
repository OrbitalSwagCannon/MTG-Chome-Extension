{
  "manifest_version": 2,

  "name": "MTG Card Finder",
  "description": "Easily find cards with this useful extension!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "background":{
    "scripts": ["right-click-menu.js"]
  },
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  
  "icons":{
    "16": "icon16.png"
  }
}